{{ define "card_article" }}
<div class="card">
    <a href="/article/{{ .Slug }}">
        <img src="{{ .Image }}" class="card-img-top" alt="...">
    </a>
    <div class="card-body">
        <h5 class="card-title"><strong>{{ .Title }}</strong></h5>
        <p class="card-text">
            {{ .Summary }}... 
            <a href="/article/{{ .Slug }}">Read more</a>
        </p>
    </div>
</div>
{{ end }}